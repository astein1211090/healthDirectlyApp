<!DOCTYPE html>
<html>
  <head>
    <title>HealthDirectly</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">


  </head>

  <body>
    <nav role="navigation" class="indigo">
      <div class="nav-wrapper container white-text">
        <a id="logo-container" href="#" class="brand-logo">HealthDirectly</a>
        <ul class="right hide-on-med-and-down white-text">
          <li><a href="#">About Us</a></li>
          <li><a href="#">Employers</a></li>
          <li><a href="#">Sign Up</a></li>
        </ul>

        <ul id="nav-mobile" class="sidenav white-text">
          <li><a href="#">About Us</a></li>
          <li><a href="#">Employers</a></li>
          <li><a href="#">Sign Up</a></li>
        </ul>
        <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>

    <!--  Scripts-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="js/materialize.js"></script>
    <script src="js/init.js"></script>
  </body>
</html>
